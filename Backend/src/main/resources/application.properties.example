# Server Configuration
server.port=8080

# DSB Mobile Credentials
dsb.username=your_username
dsb.password=your_password

# Calendar ICS URL (Nextcloud public calendar export)
calendar.ics-url=https://example.test/remote.php/dav/public-calendars/your-id/?export

# H2 Database Configuration
spring.datasource.url=jdbc:h2:file:./data/substitution-plans;AUTO_SERVER=TRUE;DB_CLOSE_DELAY=-1
spring.datasource.driver-class-name=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false

# Actuator / health configuration
management.endpoints.web.exposure.include=health,info,metrics,env

# Show health details in responses (use 'never' or secure this in production)
management.endpoint.health.show-details=always

# Application metadata available to health/info
app.version=3.2.5
